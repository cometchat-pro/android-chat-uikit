<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_message_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_layout"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:visibility="visible">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vertical_bar"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/accent100"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Edit Message" />

        <TextView
            android:id="@+id/tv_message_layout_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Perfect! I've been waiting to go" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_message_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_close_24dp" />
</LinearLayout>