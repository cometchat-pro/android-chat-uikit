<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/poll_lay"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close_poll"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_close_24dp"
                    app:tint="@color/colorPrimary" />

                <TextView
                    style="@style/Heading"
                    android:id="@+id/poll_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/create_poll"
                    android:layout_toEndOf="@+id/close_poll"
                    android:drawablePadding="16dp"
                    android:padding="16dp"
                    android:text="@string/create_a_poll"
                    android:textColor="@color/primaryTextColor" />

                <ImageView
                    android:id="@+id/create_poll"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_check_primary" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/poll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:columnCount="2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/question_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/question"
                    style="@style/Text1"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/accent"
                    android:textColorHint="@color/accent600" />

                <View
                    android:id="@+id/question_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="17dp"
                    android:background="@color/accent100" />

                <TextView
                    android:id="@+id/setAnswer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:textAllCaps="true"
                    android:text="@string/option"
                    style="@style/Text2"
                    android:textColor="@color/accent600" />

                <LinearLayout
                    android:id="@+id/options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/option_1"
                        layout="@layout/polls_option" />

                    <include
                        android:id="@+id/option_2"
                        layout="@layout/polls_option" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>

            <TextView
                android:id="@+id/add_options"
                style="@style/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poll_layout"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:text="@string/add_a_new_option"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>