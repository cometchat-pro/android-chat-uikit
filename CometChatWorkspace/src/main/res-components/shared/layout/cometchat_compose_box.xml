<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:animateLayoutChanges="true"
    android:id="@+id/message_box"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/message_actions_layout"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content">
        <include layout="@layout/cometchat_edit_message_view" />
        <include layout="@layout/cometchat_reply_message_view" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/message_actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/flBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="24dp">
            <RelativeLayout
                android:id="@+id/flBox_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etComposeBox"
                    android:contentDescription="Attachment Button"
                    android:padding="8dp"
                    android:src="@drawable/ic_attachment"
                    tools:ignore="RedundantDescriptionCheck" />

                <com.cometchatworkspace.components.messages.composer.CometChatEditText
                    android:id="@+id/etComposeBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/message"
                    android:imeOptions="actionSend"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:singleLine="false"
                    tools:ignore="TouchTargetSizeCheck" />
                <View
                    android:id="@+id/separator"
                    android:layout_below="@+id/etComposeBox"
                    android:background="@color/accent100"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:id="@+id/boxEndLayout"
                    android:layout_below="@+id/separator"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_emoji"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="visible"
                        android:src="@drawable/cc_smileys"
                        android:padding="8dp"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:id="@+id/ivSticker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:src="@drawable/ic_sticker"
                        android:padding="8dp"
                        android:background="@android:color/transparent"/>
                    <ImageView
                        android:id="@+id/ivMic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_microphone_grey_selected"
                        android:padding="8dp"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/ivSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Send Button"
                        android:padding="8dp"
                        android:src="@drawable/cc_ic_send"
                        android:visibility="gone"
                        tools:ignore="RedundantDescriptionCheck"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/live_reaction_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:src="@drawable/heart_reaction"
                        tools:ignore="ImageContrastCheck"
                        android:contentDescription="Live Reaction Button" />
                </LinearLayout>
                <RelativeLayout
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_below="@+id/etComposeBox"
                    android:layout_alignBottom="@id/boxEndLayout"
                    android:id="@+id/voiceMessageLayout"
                    android:layout_toStartOf="@+id/boxEndLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:id="@+id/ivDelete"
                        android:src="@drawable/ic_delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/grey"
                        android:contentDescription="Delete Voice Note" />
                    <SeekBar
                        tools:visibility="visible"
                        android:visibility="gone"
                        android:id="@+id/voice_message_seekbar"
                        android:layout_toEndOf="@+id/ivDelete"
                        android:layout_above="@+id/record_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.cometchatworkspace.components.messages.composer.audioVisualizer.AudioRecordView
                        tools:visibility="visible"
                        android:layout_toEndOf="@+id/ivDelete"
                        android:id="@+id/record_audio_visualizer"
                        app:chunkAlignTo="bottom"
                        app:chunkMaxHeight="150dp"
                        app:chunkColor="@color/colorPrimary"
                        app:chunkSpace="1dp"
                        app:chunkWidth="2dp"
                        app:chunkMinHeight="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                    <Chronometer
                        android:layout_toRightOf="@+id/ivDelete"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/record_time"
                        android:elevation="8dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</RelativeLayout>