<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="message"
            type="com.cometchat.pro.models.MediaMessage" />
        <variable
            name="activity"
            type="androidx.appcompat.app.AppCompatActivity" />
    </data>
    <RelativeLayout
        android:id="@+id/rl_message"
        android:layoutDirection="ltr"
        android:animateLayoutChanges="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      >
        <RelativeLayout
            android:id="@+id/avatar_layout"
            android:layout_alignParentEnd="true"
            android:minWidth="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.cometchatworkspace.components.shared.secondaryComponents.cometchatAvatar.CometChatAvatar
                android:layout_width="24dp"
                android:id="@+id/iv_user"
                tools:src="@tools:sample/avatars"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_height="24dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_user"
            tools:text="Iron Man"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_below="@+id/tv_user"
            android:layout_toStartOf="@+id/avatar_layout"
            android:id="@+id/bubble_container"
            app:cardElevation="0dp"
            android:elevation="0dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="116dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_gravity="end"
                    android:id="@+id/message_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <include
                    android:id="@+id/translate_view"
                    layout="@layout/translate_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:visibility="gone"
                   />
                <com.cometchatworkspace.components.shared.secondaryComponents.cometchatReaction.CometChatMessageReaction
                    android:id="@+id/reactions_group"
                    app:messageReaction_gravity="end"
                    android:layout_gravity="end"
                    app:borderRadius="64"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/divider"
                    android:layout_margin="8dp"
                    android:background="@color/grey_200"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:layout_margin="8dp"
                    android:id="@+id/thread_reply_count"
                    style="@style/Name"
                    android:textColor="@color/textColorWhite"
                    tools:text="View 2 Replies"
                    android:drawableEnd="@drawable/ic_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/bubble_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/receipt_layout"
                layout="@layout/cometchat_message_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp" />
        </LinearLayout>
    </RelativeLayout>

</layout>
