<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layoutDirection="ltr"
        android:id="@+id/rl_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.cometchatworkspace.components.shared.secondaryComponents.cometchatAvatar.CometChatAvatar
            android:layout_width="24dp"
            android:id="@+id/iv_user"
            tools:src="@tools:sample/avatars"
            android:layout_alignTop="@id/cv_message_container"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_user"
            android:textSize="12sp"
            tools:text="Iron Man" />

        <com.google.android.material.card.MaterialCardView
            android:layout_below="@+id/tv_user"
            android:layout_toEndOf="@+id/iv_user"
            android:id="@+id/cv_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/message_bubble_grey"
            android:layout_margin="8dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/image_view"
                    android:layout_width="250dp"
                    android:layout_height="100dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/link_img"
                        android:layout_width="250dp"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:background="@color/textColorWhite"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_defaulf_image" />
                    <ImageView
                        android:id="@+id/videoLink"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_play_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/link_title"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_view"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/primaryTextColor"
                    android:textStyle="bold"
                    tools:text="SecondHand Shoes" />
                <TextView
                    android:textColor="@color/primaryTextColor"
                    android:paddingBottom="8dp"
                    android:paddingStart="16dp"
                    android:textStyle="italic"
                    tools:text="Lorium Espium wet twe serew fae daq ruqa"
                    android:id="@+id/link_subtitle"
                    android:layout_below="@+id/link_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/primaryTextColor"
                    android:paddingLeft="16dp"
                    android:id="@+id/message"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/link_subtitle"
                    tools:text="@tools:sample/lorem"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="16dp"
                    android:background="@color/light_grey"
                    android:id="@+id/linkSeperator"
                    android:layout_below="@+id/message"
                    android:layout_width="250dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/visitLink"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="@string/visit"
                    android:layout_below="@+id/linkSeperator"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginBottom="16dp"
            android:layout_alignStart="@id/cv_message_container"
            android:layout_below="@+id/cv_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.cometchatworkspace.components.shared.secondaryComponents.cometchatReaction.CometChatMessageReaction
                android:id="@+id/reactions_group"
                app:messageReaction_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:id="@+id/thread_reply_count"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                tools:text="2 replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/receipt_layout"
                layout="@layout/cometchat_message_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
